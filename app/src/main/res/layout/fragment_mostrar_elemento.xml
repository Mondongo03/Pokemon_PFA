<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MostrarPokemonFragment">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="24dp">

        <ImageView
            android:id="@+id/imagenMiniatura"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/pokeball"
            android:layout_marginEnd="24dp"/>

        <TextView
            android:id="@+id/nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="60sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tituloDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout1"
        android:text="Descripción del Pokemon:"
        android:textSize="20sp"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/descripcion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tituloDesc"
        android:textSize="20sp"
        android:layout_marginTop="4dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/descripcion"
        android:layout_marginTop="2dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginEnd="4dp">

            <TextView
                android:id="@+id/hp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/atq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/def"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/sAtq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/sDef"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/vel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/mov"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Movimientos Génericos"
                android:layout_marginBottom="4dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="4dp">

            <TextView
                android:id="@+id/habilidad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="40dp"/>

            <ImageView
                android:id="@+id/tipo1"
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:layout_marginBottom="4dp"/>

            <ImageView
                android:id="@+id/tipo2"
                android:layout_width="match_parent"
                android:layout_height="22dp" />
        </LinearLayout>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginTop="440dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewScroll1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Texto con scroll 1"
                android:textSize="20sp"
                android:layout_marginBottom="8dp"/>
            <TextView
                android:id="@+id/textViewScroll2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Texto con scroll 2"
                android:textSize="20sp"
                android:layout_marginBottom="8dp"/>
            <TextView
                android:id="@+id/textViewScroll3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Texto con scroll 3"
                android:textSize="20sp"
                android:layout_marginBottom="8dp"/>
            <TextView
                android:id="@+id/textViewScroll4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Texto con scroll4"
                android:textSize="20sp"
                android:layout_marginBottom="8dp"/>
            <TextView
                android:id="@+id/textViewScroll5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Texto con scroll 5"
                android:textSize="20sp"
                android:layout_marginBottom="8dp"/>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>

