<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginTop="100dp"
    android:layout_height="match_parent">

        <TextView
            android:id="@+id/textoTipo2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:text="Tipos del defensor"
            tools:ignore="MissingConstraints"/>
        <Spinner
            android:id="@+id/tipo1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/tipos"
            android:layout_margin="30dp"
            app:layout_constraintTop_toBottomOf="@+id/textoTipo2"
            tools:ignore="MissingConstraints"/>

        <Spinner
            android:id="@+id/tipo2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/tipos"
            android:layout_margin="30dp"
            app:layout_constraintTop_toBottomOf="@+id/tipo1"
            tools:ignore="MissingConstraints"/>
        <Button
            android:id="@+id/calcular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:backgroundTint="@color/red"
            app:layout_constraintTop_toBottomOf="@+id/tipo2"
            android:text="Calcular efectividad" />
        <TextView
            android:id="@+id/efectividades"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@+id/calcular"
            tools:ignore="MissingConstraints"/>

</androidx.constraintlayout.widget.ConstraintLayout>